[user]
    email = ether@cpan.org
    name = Karen Etheridge
[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
[color "diff"]
[push]
    default = upstream
[merge]
    renamelimit = 1658
[rebase]
    autostash = true
[branch]
    autosetupmerge = true
    autosetuprebase = always
[diff]
    algorithm = patience

[diff "gz"]
    textconv = zcat
    cachetextconv = true
    binary = true
[diff "zip"]
    textconv = unzip -c -a

;[column]
;    branch = auto

; see doc/howto/gitflow.txt
[gitflow "branch"]
    master = production
    develop = trunk
[gitflow "prefix"]
    feature = feature/
    release = staging/
    hotfix = hotfix/
    support = support/
    cepatch = cepatch/
    versiontag = release

[core]
    excludesfile = /Users/ether/.gitexclude
    # indent-with-non-tab omitted - it makes diffs look ugly
    whitespace = space-before-tab,tab-in-indent,trailing-space
    attributesfile = /Users/ether/.gitattributes

[interactive]
    singlekey = true

[log]
    date = iso8601

[alias]
    git = !git
    pr = pull --rebase
    rc = rebase --continue
    wip = stash save --keep-index 'wip'
    fetchall = fetch --all --prune
    squash = commit -m'squash'
    deltag = push --delete origin tag
    delbranch = push origin --delete
    noff = merge --no-ff
    rebasetrunk = rebase -i $(git merge-base trunk HEAD)
    rebasemaster = rebase -i $(git merge-base master HEAD)
    morelog = log --pretty=fuller
    logone = log --graph --oneline --decorate
    reflogs = reflog --pretty='%cd %h %gd %gs'
    stashes = stash list --pretty='%cd %h %gd %gs'

; for automatic translation of URLs
[url "git@github.com:"]
    insteadOf = https://github.com/
    insteadOf = git://github.com/

; p5sagit does not have ssh key for bourbon
;[url "p5sagit@git.shadowcat.co.uk:"]
;    insteadOf = git://git.shadowcat.co.uk/p5sagit/

[url "gitmo@git.moose.perl.org:"]
    insteadOf = git://git.moose.perl.org/

[url "catagits@git.shadowcat.co.uk:"]
    insteadOf = git://git.shadowcat.co.uk/catagits/

[url "dbsrgits@git.shadowcat.co.uk:"]
    insteadOf = git://git.shadowcat.co.uk/dbsrgits/

